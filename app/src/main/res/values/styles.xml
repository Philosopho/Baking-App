<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="recipe">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_standard_size_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin_standard_size_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_standard_size_vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard_size_vertical</item>
        <item name="android:textSize">@dimen/text_extra_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/padding_standard_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/card_gradient</item>
    </style>

    <style name="step" parent="recipe">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_standard_size</item>
    </style>

    <style name="step_formatted" parent="recipe">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_standard_size</item>
    </style>

    <style name="ingredients" parent="@style/recipe">
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">@dimen/text_standard_size</item>
    </style>

    <style name="linear_layout_vertical_match">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="button" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_standard_size_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin_standard_size_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_standard_size_vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard_size_vertical</item>
        <item name="android:padding">@dimen/padding_standard_size</item>
        <item name="android:textSize">@dimen/text_standard_size_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

</resources>
